---
const { item } = Astro.props;
---

<div
  class="grid grid-cols-[6rem_1fr] md:grid-cols-[5rem_1fr] xl:grid-cols-[9rem] 2xl:grid-cols-[10.5rem] xl:grid-rows-[7rem_7rem] xl:justify-center gap-5 md:gap-4 xl:gap-1 2xl:gap-3"
>
  <div
    class="rounded-full border border-[#6F6F6F] w-24 md:w-[5rem] xl:w-[7rem] 2xl:w-[7.5rem] h-24 md:h-[5rem] xl:h-[7rem] 2xl:h-[7.5rem] flex items-center justify-center xl:mx-auto"
  >
    <img src={item.icon} alt="" class="h-11 md:h-9 xl:h-12 2xl:h-14 w-11 md:w-9 xl:w-12 2xl:w-14" />
  </div>

  <div class="flex flex-col gap-2 xl:gap-1 2xl:gap-2 py-2 xl:p-0 xl:text-center xl:items-center">
    <h2
      class="text-[#35796F] font-oswald text-[1.1rem] md:text-[1rem] xl:text-[.9rem] 2xl:text-[1rem] xl:max-w-[10ch] font-semibold 2xl:leading-5"
    >
      {item.title}
    </h2>
    <p class="text-sm md:text-xs xl:text-[.65rem] 2xl:text-[.75rem] xl:max-w-[23ch] 2xl:leading-[1.15rem]">{item.subtitle}</p>
  </div>
</div>
