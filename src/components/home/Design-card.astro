---
const { description, icon } = Astro.props;
---

<div class="flex flex-col gap-3 items-center">
  <div
    class="w-[10rem] h-[10rem] bg-white rounded-md flex items-center justify-center"
  >
    <img
      src={icon.src}
      alt={description}
      class="w-[5rem] h-[5rem] object-contain"
    />
  </div>

  <p class="text-center text-[.8rem] max-w-[26ch] text-white">{description}</p>
</div>
