---
import texture from "../../assets/images/textura.png";
---

<nav
  id="top-bar-container"
  class="bg-cover transition-all duration-500 ease-in-out h-7 2xl:h-9 w-full absolute z-40 top-0 hidden justify-center lg:flex"
  style={`background-image: url('${texture.src}')`}
>
  <div
    class="flex text-white items-center justify-between w-[50rem] xl:w-[60rem] 2xl:w-[65rem] text-xs 2xl:text-sm"
  >
    <p>Energ√≠a segura, proyectos confiables</p>
    <p>(2494) - 123456 / (2494) - 789987</p>
  </div>
</nav>

<style>
  nav.top-bar_scrolled {
    position: fixed;
    top: 0;
    animation: show-in .5s ease;
  }

  @keyframes show-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

<script>
  const topBar = document.getElementById("top-bar-container");
  const scrollTreshold = 80;

  function handleScroll() {
    if (window.scrollY > scrollTreshold) {
      topBar?.classList.add("top-bar_scrolled");
    } else {
      topBar?.classList.remove("top-bar_scrolled");
    }
  }

  handleScroll();

  window.addEventListener("scroll", handleScroll);
</script>
