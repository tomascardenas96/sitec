---
const { image, title, subtitle, id } = Astro.props;
---

<artice class="w-full h-80 border shadow-sm">
  <a
    href={`/projects/preview/${id}`}
    class="grid grid-rows-[13.5rem_1fr] text-inherit"
  >
    <div class="border-b">
      <img src={image.src} alt={title} class="w-full h-full object-cover" />
    </div>

    <div class="flex flex-col pt-4">
      <h1 class="font-oswald text-xl text-center text-[#35796F]">{title}</h1>
      <h2 class="text-center">{subtitle}</h2>
    </div>
  </a>
</artice>
