---
import logo from "../../assets/Logo-sitec.jpg";
import menu from "../../assets/icons/menu.svg";
import close from "../../assets/icons/close.svg";
---

<header
  class="bg-white h-[4.5rem] flex items-center justify-between px-2 fixed z-20 shadow-md w-full top-0"
>
  <a href="/" class="h-full">
    <img src={logo.src} alt="Logo Sitec" class="h-full" />
  </a>

  <button id="burgerBtn" class="mr-2">
    <img src={menu.src} alt="Check" class="h-8 w-8" />
  </button>

  <div
    id="menuModal"
    class="fixed inset-0 bg-black/60 hidden items-center justify-center z-30"
  >
    <div
      class="bg-white w-4/5 max-w-sm p-6 rounded-2xl shadow-lg relative flex flex-col gap-6 text-center"
    >
      <button id="closeModal" class="absolute top-3 right-3">
        <img src={close.src} alt="Cerrar" class="w-6 h-6" />
      </button>

      <a href="/" class="text-xl font-semibold hover:text-green-600">Inicio</a>
      <a href="/servicios" class="text-xl font-semibold hover:text-green-600"
        >Servicios</a
      >
      <a href="/contacto" class="text-xl font-semibold hover:text-green-600"
        >Contacto</a
      >
    </div>
  </div>
</header>
